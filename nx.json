{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": [
    {
      "plugin": "@nxlv/python",
      "options": {
        "packageManager": "uv"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "targetDefaults": {
    "add": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun add",
        "cwd": "{projectRoot}"
      }
    },
    "update": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun update",
        "cwd": "{projectRoot}"
      }
    },
    "remove": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun remove",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{cjs,mjs,ts,tsx,js,jsx}"]
      },
      "cache": true
    },
    "lint:fix": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{cjs,mjs,ts,tsx,js,jsx}"],
        "fix": true
      },
      "cache": true
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check --ignore-path ../../.gitignore '**/*.{cjs,mjs,ts,tsx,js,jsx,json,css,scss,md}'",
        "cwd": "{projectRoot}"
      }
    },
    "format:write": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write --ignore-path ../../.gitignore '**/*.{cjs,mjs,ts,tsx,js,jsx,json,css,scss,md}'",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "dependsOn": ["^build"]
    },
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run scripts/write-version.mjs",
        "cwd": "{projectRoot}"
      }
    },
    "version:check": {
      "executor": "nx:run-commands",
      "dependsOn": ["version"],
      "options": {
        "command": "git diff --exit-code -- HEAD 'src/version.*' 'src/**/version.*'",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "dependsOn": ["^build", "version"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["^build"]
    }
  },
  "release": {
    "projects": ["packages/*", "!packages/generator"],
    "projectsRelationship": "independent",
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": false,
          "applyUsernameToAuthors": false,
          "commitReferences": false,
          "versionTitleDate": true
        }
      }
    },
    "version": {
      "conventionalCommits": true
    }
  }
}
