{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": [
    {
      "plugin": "@nxlv/python",
      "options": {
        "packageManager": "uv"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "targetDefaults": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,jsx}"]
      },
      "cache": true
    },
    "lint:fix": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,jsx}"],
        "fix": true
      },
      "cache": true
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check --ignore-path ../../.gitignore '**/*.{ts,tsx,js,jsx,json,css,scss,md}'",
        "cwd": "{projectRoot}"
      }
    },
    "format:write": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write --ignore-path ../../.gitignore '**/*.{ts,tsx,js,jsx,json,css,scss,md}'",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test"
    }
  },
  "release": {
    "projectsRelationship": "independent",
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": false,
          "applyUsernameToAuthors": false,
          "commitReferences": false,
          "versionTitleDate": true
        }
      }
    },
    "version": {
      "conventionalCommits": true
    }
  }
}
