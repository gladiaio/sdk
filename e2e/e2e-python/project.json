{
  "name": "e2e-python",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "{projectRoot}/tests",
  "targets": {
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "audit": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uvx pysentry-rs .",
        "cwd": "{projectRoot}"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "lint:check": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["src", "tests"]
      },
      "cache": true
    },
    "lint:write": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["src", "tests"],
        "fix": true
      }
    },
    "format:check": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": ["src", "tests"],
        "check": true
      },
      "cache": true
    },
    "format:write": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": ["src", "tests"]
      }
    },
    "type:check": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uvx pyright",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    }
  },
  "tags": ["type:lib", "scope:e2e"]
}
